      <strong>Pimage:</strong>
      <%= @product.pimage %>
    </div>

    <div class="col-xs-12 col-md-6">
      <div class="product-edit">
      <%= form_with model: @product, :html => { :multipart => true } ,local: true do |form| %>
            <p>
                <%= form.label :"Ürün Başlığı:" %>
                <%= form.text_field :pname ,:class=>"autocomplete form-control"%>
                
            </p>
            <p>
                <%= form.label :"Ürün Açıklama:" %>
                <%= form.text_field :pdescription,:class=>"autocomplete form-control" %>
                
            </p>
            <p>
                <%= form.label :"Ürün Fiyatı:" %>
                <%= form.text_field :pprice ,:class=>"autocomplete form-control"%>
                
            </p>
             <p>
               
                <%= form.file_field :photo %>
                
            </p>
            <p class="edit-update-button">
                <%= form.submit class: 'btn btn-primary'%>
            </p>
      <% end %>
  
      <div class="btn-group" role="group" aria-label="Basic example">
       <%= link_to 'Show', @product, :class=>"btn btn-danger" %>
       <%= link_to 'Back', products_path ,:class=>"btn btn-warning"%>
      </div>
      
