<div class="container">
  <div id="login-register-card" class="card login-register-card" style="width: 18rem;">
  <img src="https://www.w3schools.com/images/picture.jpg" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">GİRİŞ YAP</h5>
     
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="actions">
          <%= f.submit "Şifremi sıfırla" ,:id=>"sign-login-buttons",:class=>"btn btn-outline-success my-2 my-sm-0"%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

  </div>
</div>
</div>

